[Unit]
Description=Next.js server for Metrics Viewer frontend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/Metrics-Viewer-Project/front_end
Environment="PATH=/path/to/node/bin"
Environment="NODE_ENV=production"
ExecStart=/path/to/node/bin/node_modules/.bin/next start

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

